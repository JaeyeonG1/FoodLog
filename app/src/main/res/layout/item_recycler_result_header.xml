<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.boostcampai.foodlog.model.InferenceResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@{item.date}"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_main"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="12월 16일" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="@{item.time}"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="12월 16일" />

                <TextView
                    android:id="@+id/tv_nutrition_main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_sub1_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_date" />

                <TextView
                    android:id="@+id/tv_nutrition_sub1_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="탄수화물"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_sub1"
                    app:layout_constraintEnd_toStartOf="@id/tv_nutrition_sub2_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_main"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/tv_nutrition_sub1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="123g"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_nutrition_sub1_title"
                    app:layout_constraintStart_toStartOf="@id/tv_nutrition_sub1_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_sub1_title" />

                <TextView
                    android:id="@+id/tv_nutrition_sub2_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="단백질"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_sub2"
                    app:layout_constraintEnd_toStartOf="@id/tv_nutrition_sub2_title"
                    app:layout_constraintStart_toEndOf="@id/tv_nutrition_sub1_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_main"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/tv_nutrition_sub2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="123g"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_nutrition_sub2_title"
                    app:layout_constraintStart_toStartOf="@id/tv_nutrition_sub2_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_sub2_title" />

                <TextView
                    android:id="@+id/tv_nutrition_sub3_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="지방"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_sub3"
                    app:layout_constraintEnd_toStartOf="@id/tv_nutrition_sub3_title"
                    app:layout_constraintStart_toEndOf="@id/tv_nutrition_sub2_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_main"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/tv_nutrition_sub3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="123g"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_nutrition_sub3_title"
                    app:layout_constraintStart_toStartOf="@id/tv_nutrition_sub3_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_sub3_title" />

                <TextView
                    android:id="@+id/tv_nutrition_sub4_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="나트륨"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_sub4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_nutrition_sub3_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_main"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/tv_nutrition_sub4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="123g"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_nutrition_sub4_title"
                    app:layout_constraintStart_toStartOf="@id/tv_nutrition_sub4_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_sub4_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
